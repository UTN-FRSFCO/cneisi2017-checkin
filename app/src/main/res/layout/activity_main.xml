<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvAuditoriumName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lvAuditoriums"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/lvAuditoriums"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Seleccione el auditorio:"
        android:textColor="#00c5bf"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lvAuditoriums"
        android:layout_width="match_parent"
        android:layout_height="700px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvAuditoriumName"
        android:divider="#ff8400"
        android:dividerHeight="1dp"
        android:headerDividersEnabled="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/isologotipo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp" />

</RelativeLayout>
